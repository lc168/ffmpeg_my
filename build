#!/bin/bash
gcc -g -finstrument-functions -Llibavcodec -Llibavdevice -Llibavfilter -Llibavformat -Llibavresample -Llibavutil -Llibpostproc -Llibswscale -Llibswresample -L/root/ffmpeg_lib/lib -L/usr/local/cuda-8.0/targets/x86_64-linux/lib  -Wl,--as-needed -Wl,-z,noexecstack -Wl,--warn-common -Wl,-rpath-link=libpostproc:libswresample:libswscale:libavfilter:libavdevice:libavformat:libavcodec:libavutil:libavresample  -o bin cmdutils.c ffmpeg_opt.c ffmpeg_filter.c ffmpeg.c  ffmpeg_cuvid.c  -lavdevice -lavfilter -lavformat -lavcodec -lpostproc -lswresample -lswscale -lavutil -ldl -ldl -lxcb -lxcb-shm -lxcb-xfixes -lxcb-shape -lxvidcore -L/root/ffmpeg_lib/lib -lx264 -lvorbisenc -lvorbis -logg -ltheoraenc -ltheoradec -logg -lmp3lame -L/root/ffmpeg_lib/lib -lfdk-aac -lm -pthread -I../  -I../compat/atomics/gcc

